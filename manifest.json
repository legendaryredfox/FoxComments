{
  "manifest_version": 2,
  "name": "FoxComments",
  "version": "1.0",
  "description": "Opens all the HTML comments of the current page on a new tab",
  "permissions": [
    "activeTab",
    "tabs",
    "<all_urls>",
    "webNavigation",
    "scripting"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": {
      "32": "icons/icons8-fox-32.png"
    }
  },
  "web_accessible_resources": ["view-source.html", "view-source.js"]
}
